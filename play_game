import time
from divider import Divider
from turtle import Screen
from paddle import Paddle
from ball import Ball
from scoreboard import Scoreboard

screen = Screen()
screen.bgcolor("black")
screen.setup(800, 600)
screen.title("PONG")
screen.tracer(0)

player_1_paddle = Paddle((-370, 0))     # This creates the paddles and sets their origin locations
player_2_paddle = Paddle((370, 0))
pong_ball = Ball()                      # This creates the ball
scoreboard = Scoreboard()               # This creates the scoreboard
divider = Divider()                     # This creates the central divider line

screen.listen()
screen.onkeypress(player_1_paddle.go_up, "w")        # PLAYER 1 paddle controls (left side)
screen.onkeypress(player_1_paddle.go_down, "s")

screen.onkeypress(player_2_paddle.go_up, "Up")      # PLAYER 2 paddle controls (right side)
screen.onkeypress(player_2_paddle.go_down, "Down")

game_is_on = True
while game_is_on:
    time.sleep(pong_ball.move_speed)        # This sets the initial ball movement speed
    screen.update()
    pong_ball.move()                        # This makes the ball start moving

    # Detect collision with top and bottom wall
    if pong_ball.ycor() > 280 or pong_ball.ycor() < -280:
        pong_ball.bounce()

    # Detect ball collision with the left and right paddles, and rebounds in the opposite direction
    if (pong_ball.distance(player_1_paddle) < 50 and pong_ball.xcor() < -340 or
            pong_ball.distance(player_2_paddle) < 50 and pong_ball.xcor() > 340):
        pong_ball.rebound()

    # Detect score point for PLAYER 1 (if ball hits right boundary), then resets ball position in the centre
    if pong_ball.xcor() > 380:
        pong_ball.reset_position()
        scoreboard.p1_point()

    # Detect score point for PLAYER 2 (if ball hits left boundary), then resets ball position in the centre
    if pong_ball.xcor() < -380:
        pong_ball.reset_position()
        scoreboard.p2_point()

    # This ends the game when a player gets 5 points
    if scoreboard.p1_score == 5 or scoreboard.p2_score == 5:
        game_is_on = False
        scoreboard.game_over()

screen.exitonclick()
